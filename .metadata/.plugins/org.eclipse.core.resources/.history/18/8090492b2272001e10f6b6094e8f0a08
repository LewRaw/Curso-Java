import java.util.Scanner;

public class Problema1 {
	static Scanner s = new Scanner(System.in);
	
	public static void main(String[] args) {

		System.out.println("Informe 3 lados do triangulo 1");
		double catetoA1 	= Double.parseDouble(s.nextLine());
		double catetoB1 	= Double.parseDouble(s.nextLine());
		double hipotenusa1 	= Double.parseDouble(s.nextLine());
		
		System.out.println("Informe o cateto A do triangulo 2");
		double catetoA2 = s.nextDouble();
		System.out.println("Informe o cateto B do triangulo 2");
		double catetoB2 = s.nextDouble();
		System.out.println("Informe a hipotenusa do triangulo 2");
		double hipotenusa2 = s.nextDouble();
		
		double p1 = catetoA1 + catetoB1 + hipotenusa1 / 2;
		double p2 = catetoA2 + catetoB2 + hipotenusa2 / 2;
		double area1 = p1*(p1-catetoA1)*(p1-catetoB1)*(p1-hipotenusa1);
		double area2 = p2*(p2-catetoA2)*(p2-catetoB2)*(p2-hipotenusa2);
		
		
	}

}
